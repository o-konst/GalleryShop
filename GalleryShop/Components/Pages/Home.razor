@page "/"


@using GalleryShop.Models
@using GalleryShop.Services

@inject IAlbumsService AlbumService

<PageTitle>Users</PageTitle>

<h1>Users</h1>

<p>This component demonstrates fetching data from an external API.</p>
@if (users == null)
{
    <p><em>Loading...</em></p>
}
else{
    <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                         <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Title</td>
                          <td><img src="@user.ImageUrl" /></td>
                    </tr>
                }
            </tbody>
        </table>
}

@code {
    private IEnumerable<Album>? users;

    protected override async Task OnInitializedAsync()
    {
        users = await AlbumService.GetAlbums();
    }
}